  },
  "homepage": "https://github.com/your-username/mcp-weather-server#readme",
  "bugs": {
    "url": "https://github.com/your-username/mcp-weather-server/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
